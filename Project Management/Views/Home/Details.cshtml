<table class="table table-striped">
    <tr>
        <th>Description</th>
        <th>Assign to</th>
        <th>Priority</th>
        <th>Assigned by</th>
        <th>Due Date</th>
    </tr>
    
    @foreach (var task in tasks)
    {
        <tr>
            <td>
                @task.Description
            </td>
            <td>@task.AssignTo</td>
            <td>@task.Priority</td>
            <td>@task.AssignedBy</td>
            <td>@task.DueDate</td>
            
        </tr>
    }
</table>
