            <div class="col-md-3">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Possible Start Date
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.PossibleStartDate)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Possible End Date
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.PossibleEndDate)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Duration
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Duration)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Upload File
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.UploadFile)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Status
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(model => model.Status)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>
